<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{judul}}</title>
    <link rel="icon" href="/img/cuaca.png">
    <link rel="stylesheet" href="/css/styles-tentang.css">
</head>
<body>
    <!-- Audio untuk backsound -->
    <audio id="background-sound" src="/audio/suara.mp3" autoplay loop></audio>

    <div class="background-image"></div>
    <div class="main-content">
        {{>header}} <!-- Menyertakan header -->

        <div class="cv-content">
            <img src="/img/zahran.jpg" alt="Foto Pengembang" class="profile-pic">
            <h2>{{nama}}</h2>
            <p><strong>TTL:</strong> {{tempatLahir}}, {{tanggalLahir}}</p>
            <p><strong>Jenis Kelamin:</strong> {{jenisKelamin}}</p>
            <p><strong>orang:</strong> {{orang}}</p>
            <p><strong>Status:</strong> {{status}}</p>
            <p><strong>Pendidikan:</strong> {{pendidikan}}</p>
            <p><strong>Email:</strong> {{email}}</p>
            <p><strong>Nomor HP:</strong> {{nomorHP}}</p>
        </div>

        {{>footer}} <!-- Menyertakan footer -->
    </div>

    <script>
        // Cek apakah audio bisa diputar secara otomatis
        window.addEventListener('load', function() {
            var audio = document.getElementById("background-sound");
            // Mengaktifkan audio jika browser memblokir autoplay
            audio.play().catch(() => {
                // Jika autoplay diblokir, munculkan tombol play
                var playButton = document.createElement("button");
                playButton.innerText = "Putar Backsound";
                playButton.onclick = function() {
                    audio.play();
                    playButton.style.display = "none";
                };
                document.body.appendChild(playButton);
            });
        });
    </script>
</body>
</html>
